# AI Provider API Keys
# OpenAI API key for DALL-E image generation
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API key (optional - only if using Claude for text generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama Configuration
# Ollama server URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434
# Ollama model to use (default: granite4:small-h)
OLLAMA_MODEL=granite4:small-h

# Application Configuration
# Data directory for storing projects and images
DATA_DIRECTORY=./data
# Auto-save interval in seconds
AUTO_SAVE_INTERVAL=120

# Flask Configuration (for development)
FLASK_APP=src/app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Default Story Settings (optional - overrides defaults.json)
# DEFAULT_LANGUAGE=Spanish
# DEFAULT_COMPLEXITY=beginner
# DEFAULT_VOCABULARY_DIVERSITY=medium
# DEFAULT_AGE_GROUP=4-7 years
# DEFAULT_NUM_PAGES=5
# DEFAULT_GENRE=Adventure

# Logging
LOG_LEVEL=INFO
